@code {
    private int _empresasActivas = 8;
    private int _usuariosTotales = 156;
    private int _reservasEsteMes = 245;
    private decimal _ingresosMensuales = 12500;

    private List<EmpresaDTO> _empresas = new();
    private List<RolDTO> _roles = new();
    private List<ActividadDTO> _actividadReciente = new();

    private bool _mostrarModalEmpresa = false;
    private bool _mostrarModalRol = false;

    private EmpresaDTO? _empresaSeleccionada;
    private EmpresaFormularioDTO _empresaFormulario = new();
    private RolFormularioDTO _rolFormulario = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private Task CargarDatos()
    {
        // Cargar empresas
        _empresas = new List<EmpresaDTO>
        {
            new() { Id = 1, Nombre = "Tech Solutions", RUC = "20123456789", NumeroEmpleados = 50, Activa = true, Descripcion = "Soluciones tecnológicas" },
            new() { Id = 2, Nombre = "SportZone", RUC = "20987654321", NumeroEmpleados = 35, Activa = true, Descripcion = "Gestión de espacios deportivos" },
            new() { Id = 3, Nombre = "FutAcademy", RUC = "20555666777", NumeroEmpleados = 25, Activa = true, Descripcion = "Academia de fútbol" },
            new() { Id = 4, Nombre = "EventCenter", RUC = "20111222333", NumeroEmpleados = 40, Activa = false, Descripcion = "Centro de eventos" },
        };

        // Cargar roles
        _roles = new List<RolDTO>
        {
            new() { Id = 1, Nombre = "Administrador", Descripcion = "Acceso total al sistema", Usuarios = 5 },
            new() { Id = 2, Nombre = "Gerente", Descripcion = "Gestión de empresas", Usuarios = 12 },
            new() { Id = 3, Nombre = "Usuario", Descripcion = "Usuario regular", Usuarios = 139 },
        };

        // Cargar actividad reciente
        _actividadReciente = new List<ActividadDTO>
        {
            new() { Titulo = "Nueva empresa registrada", Descripcion = "SportZone se unió a la plataforma", Hora = "Hace 2 horas", Icono = "bi-building" },
            new() { Titulo = "Reserva confirmada", Descripcion = "150 reservas procesadas este mes", Hora = "Hace 4 horas", Icono = "bi-check-circle" },
            new() { Titulo = "Usuario nuevo", Descripcion = "Se registró un nuevo usuario", Hora = "Hace 1 día", Icono = "bi-person-plus" },
            new() { Titulo = "Pago procesado", Descripcion = "$2,500 en transacciones", Hora = "Hace 1 día", Icono = "bi-cash" },
        };
        return Task.CompletedTask;
    }

    private void AbrirModalNuevaEmpresa()
    {
        _empresaSeleccionada = null;
        _empresaFormulario = new();
        _mostrarModalEmpresa = true;
    }

    private void CerrarModalEmpresa()
    {
        _mostrarModalEmpresa = false;
        _empresaFormulario = new();
    }

    private void EditarEmpresa(EmpresaDTO empresa)
    {
        _empresaSeleccionada = empresa;
        _empresaFormulario = new()
        {
            Nombre = empresa.Nombre,
            Descripcion = empresa.Descripcion,
            NumeroEmpleados = empresa.NumeroEmpleados,
            Activa = empresa.Activa
        };
        _mostrarModalEmpresa = true;
    }

    private void GuardarEmpresa()
    {
        if (string.IsNullOrEmpty(_empresaFormulario.Nombre))
        {
            return;
        }

        if (_empresaSeleccionada == null)
        {
            // Crear nueva
            var nuevaEmpresa = new EmpresaDTO
            {
                Id = _empresas.Max(e => e.Id) + 1,
                Nombre = _empresaFormulario.Nombre,
                Descripcion = _empresaFormulario.Descripcion,
                NumeroEmpleados = _empresaFormulario.NumeroEmpleados,
                Activa = _empresaFormulario.Activa,
                RUC = "20" + new Random().Next(100000000, 999999999)
            };
            _empresas.Add(nuevaEmpresa);
        }
        else
        {
            // Actualizar
            _empresaSeleccionada.Nombre = _empresaFormulario.Nombre;
            _empresaSeleccionada.Descripcion = _empresaFormulario.Descripcion;
            _empresaSeleccionada.NumeroEmpleados = _empresaFormulario.NumeroEmpleados;
            _empresaSeleccionada.Activa = _empresaFormulario.Activa;
        }

        CerrarModalEmpresa();
    }

    private void EliminarEmpresa(EmpresaDTO empresa)
    {
        _empresas.Remove(empresa);
    }

    private void AbrirModalNuevoRol()
    {
        _rolFormulario = new();
        _mostrarModalRol = true;
    }

    private void CerrarModalRol()
    {
        _mostrarModalRol = false;
        _rolFormulario = new();
    }

    private void GuardarRol()
    {
        if (string.IsNullOrEmpty(_rolFormulario.Nombre))
        {
            return;
        }

        var nuevoRol = new RolDTO
        {
            Id = _roles.Max(r => r.Id) + 1,
            Nombre = _rolFormulario.Nombre,
            Descripcion = _rolFormulario.Descripcion,
            Usuarios = 0
        };
        _roles.Add(nuevoRol);

        CerrarModalRol();
    }

    public class EmpresaDTO
    {
        public int Id { get; set; }
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public string RUC { get; set; } = "";
        public int NumeroEmpleados { get; set; }
        public bool Activa { get; set; }
    }

    public class RolDTO
    {
        public int Id { get; set; }
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public int Usuarios { get; set; }
    }

    public class ActividadDTO
    {
        public string Titulo { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public string Hora { get; set; } = "";
        public string Icono { get; set; } = "";
    }

    public class EmpresaFormularioDTO
    {
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public int NumeroEmpleados { get; set; }
        public bool Activa { get; set; } = true;
    }

    public class RolFormularioDTO
    {
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
    }
}
