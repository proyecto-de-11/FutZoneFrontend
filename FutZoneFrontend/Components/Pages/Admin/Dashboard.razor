@code {
    private int _empresasActivas = 0;
    private int _usuariosTotales = 0;
    private int _reservasEsteMes = 0;
    private decimal _ingresosMensuales = 0;

    private List<EmpresaDTO> _empresas = new();
    private List<RolDTO> _roles = new();
    private List<ActividadDTO> _actividadReciente = new();

    private bool _mostrarModalEmpresa = false;
    private bool _mostrarModalRol = false;
    private bool _cargando = true;
    private string? _mensajeError = null;

    private EmpresaDTO? _empresaSeleccionada;
    private EmpresaFormularioDTO _empresaFormulario = new();
    private RolFormularioDTO _rolFormulario = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        try
        {
            _cargando = true;
            _mensajeError = null;

            // Cargar estadísticas
            var stats = await DashboardService.GetDashboardStatsAsync();
            if (stats != null)
            {
                _empresasActivas = stats.EmpresasActivas;
                _usuariosTotales = stats.UsuariosTotales;
                _reservasEsteMes = stats.ReservasEsteMes;
                _ingresosMensuales = stats.IngresosMensuales;
                Console.WriteLine($"Stats cargadas: Empresas={_empresasActivas}, Usuarios={_usuariosTotales}");
            }
            else
            {
                Console.WriteLine("No se pudieron cargar estadísticas, usando valores por defecto");
                _mensajeError = "No se pudieron cargar las estadísticas (usando valores por defecto)";
                // Usar valores de fallback
                _empresasActivas = 0;
                _usuariosTotales = 0;
                _reservasEsteMes = 0;
                _ingresosMensuales = 0;
            }

            // Cargar empresas
            var empresas = await DashboardService.GetEmpresasAsync();
            _empresas = empresas ?? new();
            Console.WriteLine($"Empresas cargadas: {_empresas.Count}");

            // Cargar roles
            var roles = await DashboardService.GetRolesAsync();
            _roles = roles ?? new();
            Console.WriteLine($"Roles cargados: {_roles.Count}");

            // Cargar actividad reciente
            var actividades = await DashboardService.GetActividadRecienteAsync();
            _actividadReciente = actividades ?? new();
            Console.WriteLine($"Actividades cargadas: {_actividadReciente.Count}");

            // Si no hay datos, mostrar advertencia
            if (_empresas.Count == 0 && _roles.Count == 0)
            {
                _mensajeError = "No se obtuvieron datos de la API. Verifica que el servidor esté ejecutándose.";
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error al cargar datos: {ex.Message}";
            Console.WriteLine($"Exception: {ex}");
        }
        finally
        {
            _cargando = false;
        }
    }

    private void AbrirModalNuevaEmpresa()
    {
        _empresaSeleccionada = null;
        _empresaFormulario = new();
        _mostrarModalEmpresa = true;
    }

    private void CerrarModalEmpresa()
    {
        _mostrarModalEmpresa = false;
        _empresaFormulario = new();
    }

    private void EditarEmpresa(EmpresaDTO empresa)
    {
        _empresaSeleccionada = empresa;
        _empresaFormulario = new()
        {
            Nombre = empresa.Nombre,
            Descripcion = empresa.Descripcion,
            NumeroEmpleados = empresa.NumeroEmpleados,
            Activa = empresa.Activa
        };
        _mostrarModalEmpresa = true;
    }

    private async Task GuardarEmpresa()
    {
        if (string.IsNullOrEmpty(_empresaFormulario.Nombre))
        {
            _mensajeError = "El nombre de la empresa es requerido";
            return;
        }

        try
        {
            bool resultado;
            
            if (_empresaSeleccionada != null)
            {
                // Actualizar
                var empresa = new EmpresaDTO
                {
                    Id = _empresaSeleccionada.Id,
                    Nombre = _empresaFormulario.Nombre,
                    Descripcion = _empresaFormulario.Descripcion,
                    RUC = _empresaSeleccionada.RUC,
                    NumeroEmpleados = _empresaFormulario.NumeroEmpleados,
                    Activa = _empresaFormulario.Activa
                };
                resultado = await DashboardService.UpdateEmpresaAsync(_empresaSeleccionada.Id, empresa);
            }
            else
            {
                // Crear nueva
                var empresa = new EmpresaDTO
                {
                    Nombre = _empresaFormulario.Nombre,
                    Descripcion = _empresaFormulario.Descripcion,
                    RUC = "",
                    NumeroEmpleados = _empresaFormulario.NumeroEmpleados,
                    Activa = _empresaFormulario.Activa
                };
                resultado = await DashboardService.CreateEmpresaAsync(empresa);
            }
            
            if (resultado)
            {
                CerrarModalEmpresa();
                await CargarDatos();
            }
            else
            {
                _mensajeError = "Error al guardar la empresa";
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error al guardar: {ex.Message}";
        }
    }

    private async Task EliminarEmpresa(EmpresaDTO empresa)
    {
        try
        {
            var resultado = await DashboardService.DeleteEmpresaAsync(empresa.Id);
            if (resultado)
            {
                await CargarDatos();
            }
            else
            {
                _mensajeError = "Error al eliminar la empresa";
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error al eliminar: {ex.Message}";
        }
    }

    private void AbrirModalNuevoRol()
    {
        _rolFormulario = new();
        _mostrarModalRol = true;
    }

    private void CerrarModalRol()
    {
        _mostrarModalRol = false;
        _rolFormulario = new();
    }

    private async Task GuardarRol()
    {
        if (string.IsNullOrEmpty(_rolFormulario.Nombre))
        {
            _mensajeError = "El nombre del rol es requerido";
            return;
        }

        try
        {
            var rol = new RolDTO
            {
                Nombre = _rolFormulario.Nombre,
                Descripcion = _rolFormulario.Descripcion,
                Usuarios = 0
            };
            
            var resultado = await DashboardService.CreateRolAsync(rol);
            if (resultado)
            {
                CerrarModalRol();
                await CargarDatos();
            }
            else
            {
                _mensajeError = "Error al crear el rol";
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error al guardar: {ex.Message}";
        }
    }

    public class EmpresaFormularioDTO
    {
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public int NumeroEmpleados { get; set; }
        public bool Activa { get; set; } = true;
    }

    public class RolFormularioDTO
    {
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
    }
}
