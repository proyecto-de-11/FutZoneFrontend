@page "/admin/dashboard"
@using FutZoneFrontend.Services
@using FutZoneFrontend.Services.Models
@inject IDashboardService DashboardService

<PageTitle>Dashboard Administrativo - FutZone</PageTitle>

<div class="admin-dashboard">
    <!-- Header -->
    <div class="admin-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="mb-0">⚽ Dashboard de Propietario de Publicidad</h1>
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" @onclick="AbrirModalNuevaEmpresa">
                        <i class="bi bi-plus-circle"></i> Nueva Empresa
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="admin-content">
        <div class="container-fluid">
            
            <!-- Estados de Carga -->
            @if (_cargando)
            {
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <div class="spinner-border spinner-border-sm me-2" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <span>Cargando datos del dashboard...</span>
                </div>
            }

            @if (!string.IsNullOrEmpty(_mensajeError))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Error:</strong> @_mensajeError
                    <button type="button" class="btn-close" @onclick="() => _mensajeError = null"></button>
                </div>
            }

            <!-- Tarjetas de Resumen -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="stat-card bg-primary">
                        <div class="stat-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="stat-content">
                            <h6>Empresas Activas</h6>
                            <h3>@_empresasActivas</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="stat-card bg-success">
                        <div class="stat-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="stat-content">
                            <h6>Usuarios Totales</h6>
                            <h3>@_usuariosTotales</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="stat-card bg-info">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <div class="stat-content">
                            <h6>Reservas Este Mes</h6>
                            <h3>@_reservasEsteMes</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="stat-card bg-warning">
                        <div class="stat-icon">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                        <div class="stat-content">
                            <h6>Ingresos Mensuales</h6>
                            <h3>$@_ingresosMensuales</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección Principal -->
            <div class="row">
                <!-- Lista de Empresas -->
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Empresas Registradas</h5>
                            <small class="text-muted">Total: @_empresas.Count()</small>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Nombre</th>
                                            <th>RUC</th>
                                            <th>Empleados</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (_empresas == null || !_empresas.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center py-4 text-muted">
                                                    No hay empresas registradas
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var empresa in _empresas)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-sm bg-primary text-white rounded me-2">
                                                                <span class="fw-bold">@empresa.Nombre.Substring(0, 1)</span>
                                                            </div>
                                                            @empresa.Nombre
                                                        </div>
                                                    </td>
                                                    <td>@empresa.RUC</td>
                                                    <td>@empresa.NumeroEmpleados</td>
                                                    <td>
                                                        <span class="badge @(empresa.Activa ? "bg-success" : "bg-danger")">
                                                            @(empresa.Activa ? "Activa" : "Inactiva")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditarEmpresa(empresa)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarEmpresa(empresa)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panel Derecho -->
                <div class="col-lg-4">
                    <!-- Actividad Reciente -->
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Actividad Reciente</h5>
                        </div>
                        <div class="card-body">
                            <div class="activity-list">
                                @foreach (var actividad in _actividadReciente)
                                {
                                    <div class="activity-item d-flex mb-3 pb-3 border-bottom">
                                        <div class="activity-icon me-3">
                                            <i class="bi @actividad.Icono"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <p class="mb-1"><strong>@actividad.Titulo</strong></p>
                                            <small class="text-muted">@actividad.Descripcion</small>
                                            <br />
                                            <small class="text-muted">@actividad.Hora</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Roles del Sistema -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Roles del Sistema</h5>
                            <button class="btn btn-sm btn-primary" @onclick="AbrirModalNuevoRol">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var rol in _roles)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@rol.Nombre</h6>
                                            <small class="text-muted">@rol.Descripcion</small>
                                        </div>
                                        <span class="badge bg-secondary">@rol.Usuarios</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Nueva Empresa -->
@if (_mostrarModalEmpresa)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(_empresaSeleccionada == null ? "Crear Nueva Empresa" : "Editar Empresa")</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModalEmpresa"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nombre de la Empresa</label>
                        <input type="text" class="form-control" placeholder="Ej. Tech Solutions" @bind="_empresaFormulario.Nombre">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea class="form-control" rows="3" placeholder="Describe brevemente tu empresa" @bind="_empresaFormulario.Descripcion"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Número de Empleados</label>
                        <input type="number" class="form-control" placeholder="Ej. 50" @bind="_empresaFormulario.NumeroEmpleados">
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="activa" @bind="_empresaFormulario.Activa">
                        <label class="form-check-label" for="activa">
                            Empresa Activa
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModalEmpresa">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="GuardarEmpresa">
                        @(_empresaSeleccionada == null ? "Crear Empresa" : "Actualizar Empresa")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal: Nuevo Rol -->
@if (_mostrarModalRol)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crear Nuevo Rol</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModalRol"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nombre del Rol</label>
                        <input type="text" class="form-control" placeholder="Ej. Gerente" @bind="_rolFormulario.Nombre">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea class="form-control" rows="3" placeholder="Describe los permisos de este rol" @bind="_rolFormulario.Descripcion"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModalRol">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="GuardarRol">Crear Rol</button>
                </div>
            </div>
        </div>
    </div>
}

