    .admin-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 2rem 0; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem; }
    .admin-header h1 { font-size: 2rem; font-weight: 700; }
    .admin-content { padding-bottom: 2rem; }
    .stat-card { padding: 1.5rem; border-radius: 0.75rem; color: white; display: flex; align-items: center; gap: 1rem; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.2s; }
    .stat-card:hover { transform: translateY(-4px); }
    .stat-icon { font-size: 2.5rem; opacity: 0.8; }
    .stat-content h6 { font-size: 0.875rem; font-weight: 600; opacity: 0.9; margin-bottom: 0.5rem; }
    .stat-content h3 { font-size: 2rem; font-weight: 700; margin: 0; }
    .bg-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .bg-success { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
    .avatar-sm { width: 32px; height: 32px; display: flex; align-items-center; justify-content: center; font-size: 0.875rem; }
