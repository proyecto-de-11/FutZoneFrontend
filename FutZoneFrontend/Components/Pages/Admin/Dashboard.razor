</style>

@code {
    private HttpClient _publicidadHttpClient = null!;
    private bool _cargando = false;
    private string _mensajeError = string.Empty;
    private int _empresasActivas;
    private int _publicacionesTotales;

    private List<EmpresaDTO> _empresas = new();
    private List<PublicacionDTO> _publicaciones = new();

    private bool _mostrarModalEmpresa = false;
    private EmpresaDTO? _empresaSeleccionada;
    private EmpresaFormularioDTO _empresaFormulario = new();

    protected override async Task OnInitializedAsync()
    {
        _publicidadHttpClient = HttpClient;
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        try
        {
            _empresas = await _publicidadHttpClient.GetFromJsonAsync<List<EmpresaDTO>>("empresa") ?? new List<EmpresaDTO>();
            _publicaciones = await _publicidadHttpClient.GetFromJsonAsync<List<PublicacionDTO>>("publicacion") ?? new List<PublicacionDTO>();

            _empresasActivas = _empresas.Count(e => e.Activa);
            _publicacionesTotales = _publicaciones.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando datos: {ex.Message}");
        }
        StateHasChanged();
    }

    private void AbrirModalNuevaEmpresa()
    {
        _empresaSeleccionada = null;
        _empresaFormulario = new();
        _mostrarModalEmpresa = true;
    }

    private void CerrarModalEmpresa()
    {
        _mostrarModalEmpresa = false;
        _empresaFormulario = new();
    }

    private void EditarEmpresa(EmpresaDTO empresa)
    {
        _empresaSeleccionada = empresa;
        _empresaFormulario = new()
        {
            Nombre = empresa.Nombre,
            RUC = empresa.RUC,
            Activa = empresa.Activa
        };
        _mostrarModalEmpresa = true;
    }

    private async Task GuardarEmpresa()
    {
        if (string.IsNullOrEmpty(_empresaFormulario.Nombre) || string.IsNullOrEmpty(_empresaFormulario.RUC)) return;

        var url = _empresaSeleccionada == null ? "empresa" : $"empresa/{_empresaSeleccionada.Id}";
        var method = _empresaSeleccionada == null ? HttpMethod.Post : HttpMethod.Put;

        var request = new HttpRequestMessage(method, url)
        {
            Content = JsonContent.Create(_empresaFormulario)
        };
        var response = await _publicidadHttpClient.SendAsync(request);

        if(response.IsSuccessStatusCode)
        {
            await CargarDatos();
            CerrarModalEmpresa();
        }
    }

    private async Task EliminarEmpresa(int empresaId)
    {
        if ((await _publicidadHttpClient.DeleteAsync($"empresa/{empresaId}")).IsSuccessStatusCode)
        {
            await CargarDatos();
        }
    }

    // DTOs
    public class EmpresaDTO
    {
        public int Id { get; set; }
        public string Nombre { get; set; } = "";
        public string RUC { get; set; } = "";
        public bool Activa { get; set; }
    }
    
    public class PublicacionDTO
    {
        public int Id { get; set; }
        public string Titulo { get; set; } = "";
        public string Contenido { get; set; } = "";
    }

    public class EmpresaFormularioDTO
    {
        public string Nombre { get; set; } = "";
        public string RUC { get; set; } = "";
        public bool Activa { get; set; } = true;
    }
}
