@code {
    private List<Rol> _roles = new();
    private bool _cargando = true;
    private string? _mensajeError = null;

    protected override async Task OnInitializedAsync()
    {
        await CargarRoles();
    }

    private async Task CargarRoles()
    {
        try
        {
            _cargando = true;
            _mensajeError = null;
            
            var roles = await RolService.GetAllRolesAsync();
            _roles = roles ?? new();
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error al cargar roles: {ex.Message}";
            _roles = new();
        }
        finally
        {
            _cargando = false;
        }
    }
}