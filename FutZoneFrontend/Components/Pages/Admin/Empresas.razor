@code {
    private List<EmpresaDto> _empresas = new();
    private int _empresasActivas = 0;
    private int _empresasInactivas = 0;
    private bool _cargando = true;
    private string? _mensajeError = null;
    private bool _mostrarModalEmpresa = false;
    private EmpresaDto? _editandoEmpresa = null;
    private EmpresaDto _formEmpresa = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarEmpresas();
    }

    private async Task CargarEmpresas()
    {
        try
        {
            _cargando = true;
            _mensajeError = null;

            var response = await HttpClient.GetAsync("/api/empresas");
            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsStringAsync();
                _empresas = System.Text.Json.JsonSerializer.Deserialize<List<EmpresaDto>>(content,
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }) ?? new();

                _empresasActivas = _empresas.Count(e => e.Activa);
                _empresasInactivas = _empresas.Count(e => !e.Activa);
            }
            else
            {
                _mensajeError = $"Error al cargar empresas: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error de conexi√≥n: {ex.Message}";
        }
        finally
        {
            _cargando = false;
        }
    }

    private void AbrirModalCrearEmpresa()
    {
        _editandoEmpresa = null;
        _formEmpresa = new EmpresaDto { Activa = true };
        _mostrarModalEmpresa = true;
    }

    private void AbrirModalEditar(EmpresaDto empresa)
    {
        _editandoEmpresa = empresa;
        _formEmpresa = new EmpresaDto
        {
            Id = empresa.Id,
            Nombre = empresa.Nombre,
            Descripcion = empresa.Descripcion,
            RUC = empresa.RUC,
            NumeroEmpleados = empresa.NumeroEmpleados,
            Activa = empresa.Activa,
            Direccion = empresa.Direccion,
            Telefono = empresa.Telefono,
            Email = empresa.Email
        };
        _mostrarModalEmpresa = true;
    }

    private void CerrarModalEmpresa()
    {
        _mostrarModalEmpresa = false;
        _editandoEmpresa = null;
        _formEmpresa = new();
    }

    private async Task GuardarEmpresa()
    {
        if (string.IsNullOrWhiteSpace(_formEmpresa.Nombre) || string.IsNullOrWhiteSpace(_formEmpresa.RUC))
        {
            _mensajeError = "El nombre y RUC de la empresa son requeridos";
            return;
        }

        try
        {
            if (_editandoEmpresa != null)
            {
                // Actualizar empresa existente
                var response = await HttpClient.PutAsJsonAsync($"/api/empresas/{_editandoEmpresa.Id}", _formEmpresa);
                if (response.IsSuccessStatusCode)
                {
                    await CargarEmpresas();
                    CerrarModalEmpresa();
                }
                else
                {
                    _mensajeError = "Error al actualizar la empresa";
                }
            }
            else
            {
                // Crear nueva empresa
                var response = await HttpClient.PostAsJsonAsync("/api/empresas", _formEmpresa);
                if (response.IsSuccessStatusCode)
                {
                    await CargarEmpresas();
                    CerrarModalEmpresa();
                }
                else
                {
                    _mensajeError = "Error al crear la empresa";
                }
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error: {ex.Message}";
        }
    }

    private async Task EliminarEmpresa(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "¬øEst√°s seguro de que deseas eliminar esta empresa?"))
        {
            return;
        }

        try
        {
            var response = await HttpClient.DeleteAsync($"/api/empresas/{id}");
            if (response.IsSuccessStatusCode)
            {
                await CargarEmpresas();
            }
            else
            {
                _mensajeError = "Error al eliminar la empresa";
            }
        }
        catch (Exception ex)
        {
            _mensajeError = $"Error: {ex.Message}";
        }
    }

    public class EmpresaDto
    {
        public int Id { get; set; }
        public string Nombre { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public string RUC { get; set; } = "";
        public int NumeroEmpleados { get; set; }
        public bool Activa { get; set; }
        public string? Direccion { get; set; }
        public string? Telefono { get; set; }
        public string? Email { get; set; }
    }
}