@page "/"
@layout EmptyLayout
@using FutZoneFrontend.Components.Layout
@using FutZoneFrontend.Services
@using FutZoneFrontend.Services.Models
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>Iniciar Sesión - gofit</PageTitle>

<link href="css/gofit-auth.css" rel="stylesheet" />

<div class="gofit-bg">
    <div class="auth-container">
        <div class="auth-panel">
            <div class="card gofit-card">
                <div class="gofit-hero auth-hero-centered">
                    <i class="bi bi-person-circle"></i>
                    <h2>Bienvenido a gofit</h2>
                    <div class="small muted-note">Accede para reservar y gestionar tus entrenos</div>
                </div>
                <div class="card-body p-4">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ErrorMessage
                    <button type="button" class="btn-close" @onclick="() => ErrorMessage = string.Empty"></button>
                </div>
            }

                    <form @onsubmit="HandleLogin">
                        <div class="mb-3 input-with-icon">
                            <i class="bi bi-envelope-fill input-icon"></i>
                            <input type="email" class="form-control form-control-lg glass-input" id="email" placeholder="Correo electrónico" 
                                   @bind="LoginModel.Email" required disabled="@IsLoading">
                        </div>

                        <div class="mb-3 input-with-icon">
                            <i class="bi bi-lock-fill input-icon"></i>
                            <input type="password" class="form-control form-control-lg glass-input" id="password" placeholder="Contraseña" 
                                   @bind="LoginModel.Password" required disabled="@IsLoading">
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="primary-white-button btn-lg" disabled="@IsLoading">
                                @if (IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" style="border-width:2px"></span>
                                    <span>Entrando...</span>
                                }
                                else
                                {
                                    <span>Iniciar sesión</span>
                                }
                            </button>
                        </div>

                        <div class="text-center">
                            <small class="auth-help">¿No tienes cuenta? <a href="/register">Regístrate</a></small>
                        </div>
                    </form>
                </div> <!-- card-body -->
            </div> <!-- card gofit-card -->
        </div> <!-- auth-panel -->
    </div> <!-- auth-container -->
</div> <!-- gofit-bg -->

@code {
    private LoginRequest LoginModel = new();
    private string ErrorMessage = string.Empty;
    private bool IsLoading = false;

    private async Task HandleLogin()
    {
        if (string.IsNullOrEmpty(LoginModel.Email) || string.IsNullOrEmpty(LoginModel.Password))
        {
            ErrorMessage = "Por favor completa todos los campos";
            return;
        }

        IsLoading = true;
        ErrorMessage = string.Empty;

        try
        {
            var response = await AuthService.LoginAsync(LoginModel);
            
            if (response.Success)
            {
                // Redirigir a organizaciones después del login exitoso
                NavigationManager.NavigateTo("/organizaciones", forceLoad: true);
            }
            else
            {
                ErrorMessage = response.Message ?? "Error al iniciar sesión";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }
}

