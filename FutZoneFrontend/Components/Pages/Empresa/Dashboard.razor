</style>

@code {
    private HttpClient _canchasHttpClient = null!;
    private bool _isLoading = true;

    // KPIs
    decimal? KpiIngresosEsteMes;
    string KpiIngresosVariacion = "vs mes anterior";
    int? KpiReservasPendientes;
    string KpiReservasPendientesTexto = "para confirmar";
    double? KpiOcupacionPromedio;
    string KpiOcupacionVariacion = "en todas las canchas";
    int? KpiClientesActivos;
    string KpiClientesNuevosSemana = "nuevos esta semana";

    List<CanchaDto> Canchas = new();
    List<ReservaDto> ReservasRecientes = new();
    List<TransaccionDto> Transacciones = new();

    protected override async Task OnInitializedAsync()
    {
        _canchasHttpClient = HttpClientFactory.CreateClient("Canchas");
        await CargarDatosAsync();
    }

    private async Task ActualizarAsync()
    {
        await CargarDatosAsync();
    }

    private async Task CargarDatosAsync()
    {
        _isLoading = true;
        StateHasChanged();
        try
        {
            var canchasTask = _canchasHttpClient.GetFromJsonAsync<List<CanchaDto>>("canchas");
            var reservasTask = _canchasHttpClient.GetFromJsonAsync<List<ReservaDto>>("reservas");
            var transaccionesTask = _canchasHttpClient.GetFromJsonAsync<List<TransaccionDto>>("transacciones");

            await Task.WhenAll(canchasTask, reservasTask, transaccionesTask);

            Canchas = canchasTask.Result ?? new List<CanchaDto>();
            ReservasRecientes = reservasTask.Result ?? new List<ReservaDto>();
            Transacciones = transaccionesTask.Result ?? new List<TransaccionDto>();

            CalcularKPIs();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos del dashboard: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void CalcularKPIs()
    {
        KpiIngresosEsteMes = Transacciones
            .Where(t => t.Fecha.Month == DateTime.Now.Month && t.Fecha.Year == DateTime.Now.Year)
            .Sum(t => t.Monto);

        KpiReservasPendientes = ReservasRecientes.Count(r => r.Status == "Pendiente");
        KpiOcupacionPromedio = Canchas.Any() ? Canchas.Average(c => c.Ocupacion ?? 0) : 0;
        KpiClientesActivos = ReservasRecientes.Select(r => r.Cliente).Distinct().Count();
    }

    private async Task AceptarReserva(int reservaId)
    {
        await ModificarEstadoReserva(reservaId, "Aceptada");
    }

    private async Task RechazarReserva(int reservaId)
    {
        await ModificarEstadoReserva(reservaId, "Rechazada");
    }

    private async Task ModificarEstadoReserva(int reservaId, string nuevoEstado)
    {
        try
        {
            var response = await _canchasHttpClient.PutAsJsonAsync($"reservas/{reservaId}/estado", new { status = nuevoEstado });
            if (response.IsSuccessStatusCode)
            {
                await ActualizarAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cambiar estado de reserva: {ex.Message}");
        }
    }

    // DTOs
    public class CanchaDto
    {
        public string Nombre { get; set; } = "";
        public string Estatus { get; set; } = "Inactiva";
        public int ReservasHoy { get; set; }
        public double? Ocupacion { get; set; }
        public decimal? TarifaPorHora { get; set; }
    }

    public class ReservaDto
    {
        public int Id { get; set; }
        public string Cancha { get; set; } = "";
        public string FechaHoraDetalle { get; set; } = "";
        public string Cliente { get; set; } = "";
        public string Status { get; set; } = "";
    }

    public class TransaccionDto
    {
        public DateTime Fecha { get; set; }
        public string Concepto { get; set; } = "";
        public string Cliente { get; set; } = "";
        public decimal Monto { get; set; }
        public string Status { get; set; } = "";
    }
}
