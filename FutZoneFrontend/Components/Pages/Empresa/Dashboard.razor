@page "/propietario/dashboard"
@using System.Collections.Generic
@using System.Net.Http.Json
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Dashboard Propietario - FutZone</PageTitle>

<div class="propietario-dashboard">
    <div class="dashboard-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <h1> Dashboard Propietario</h1>
                    <small>Bienvenido a tu centro de control</small>
                </div>
                <div class="col-auto">
                    <div class="header-actions">
                        <button class="btn btn-light me-2" title="Actualizar datos" @onclick="ActualizarAsync">
                            <i class="bi bi-arrow-clockwise"></i> Actualizar
                        </button>
                        <button class="btn btn-outline-light" title="Configuraci贸n">
                            <i class="bi bi-gear"></i> Configuraci贸n
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="container-fluid">
            @if (_isLoading)
            {
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3">Cargando datos del dashboard...</p>
                </div>
            }
            else
            {
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="kpi-card kpi-ingresos">
                            <div class="kpi-icon"></div>
                            <div class="kpi-body">
                                <h6>Ingresos Este Mes</h6>
                                <h2>@KpiIngresosEsteMes?.ToString("C")</h2>
                                <small>@KpiIngresosVariacion</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <div class="kpi-card kpi-reservas">
                            <div class="kpi-icon"></div>
                            <div class="kpi-body">
                                <h6>Reservas Pendientes</h6>
                                <h2>@KpiReservasPendientes</h2>
                                <small>@KpiReservasPendientesTexto</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <div class="kpi-card kpi-ocupacion">
                            <div class="kpi-icon"></div>
                            <div class="kpi-body">
                                <h6>Ocupaci贸n Promedio</h6>
                                <h2>@(KpiOcupacionPromedio?.ToString("P0"))</h2>
                                <small>@KpiOcupacionVariacion</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <div class="kpi-card kpi-clientes">
                            <div class="kpi-icon"></div>
                            <div class="kpi-body">
                                <h6>Clientes Activos</h6>
                                <h2>@KpiClientesActivos</h2>
                                <small>@KpiClientesNuevosSemana</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-header">
                    <h3>Mis Canchas</h3>
                    <small class="text-muted">Estado general de tus canchas</small>
                </div>

                <div class="canchas-grid">
                    @if (Canchas != null)
                    {
                        @foreach (var cancha in Canchas)
                        {
                            <div class="cancha-card">
                                <div class="cancha-header">
                                    <h5>@cancha.Nombre</h5>
                                    <span class="badge @(cancha.Estatus == "Activa" ? "bg-success" : "bg-secondary")">@cancha.Estatus</span>
                                </div>
                                <div class="cancha-body">
                                    <div class="cancha-stat">
                                        <span class="cancha-stat-label">Hoy</span>
                                        <span class="cancha-stat-value">@cancha.ReservasHoy.ToString() reservas</span>
                                    </div>
                                    <div class="cancha-stat">
                                        <span class="cancha-stat-label">Ocupaci贸n</span>
                                        <span class="cancha-stat-value">@(cancha.Ocupacion?.ToString("P0"))</span>
                                    </div>
                                    <div class="cancha-stat">
                                        <span class="cancha-stat-label">Tarifa</span>
                                        <span class="cancha-stat-value">@cancha.TarifaPorHora?.ToString("C")/hr</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
