.kpi-icon {
    font-size: 2.5rem;
}

.kpi-body h6 {
    color: #6c757d;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.kpi-body h2 {
    font-weight: 700;
    font-size: 2rem;
    margin: 0;
}

.kpi-body small {
    color: #28a745;
}

.section-header {
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
}

.section-header h3 {
    font-weight: 600;
}

.canchas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
