                            </div>

                            <!-- Descripci贸n -->
                            <div class="mb-3">
                                <label for="descripcion-edit" class="form-label fw-bold">Descripci贸n</label>
                                <textarea class="form-control" id="descripcion-edit" rows="3"
                                          @bind="empresaSeleccionada.Descripcion"></textarea>
                            </div>

                            <div class="row">
                                <!-- Ubicaci贸n -->
                                <div class="col-md-6 mb-3">
                                    <label for="ubicacion-edit" class="form-label fw-bold">Ubicaci贸n</label>
                                    <input type="text" class="form-control" id="ubicacion-edit" 
                                           @bind="empresaSeleccionada.Ubicacion">
                                </div>

                                <!-- Contactos -->
                                <div class="col-md-6 mb-3">
                                    <label for="contactos-edit" class="form-label fw-bold">Contactos</label>
                                    <input type="tel" class="form-control" id="contactos-edit" 
                                           @bind="empresaSeleccionada.contactos">
                                </div>
                            </div>

                            <div class="row">
                                <!-- Correo -->
                                <div class="col-md-6 mb-3">
                                    <label for="correo-edit" class="form-label fw-bold">Correo</label>
                                    <input type="email" class="form-control" id="correo-edit" 
                                           @bind="empresaSeleccionada.Correo">
                                </div>

                                <!-- Imagen URL -->
                                <div class="col-md-6 mb-3">
                                    <label for="imagen-edit" class="form-label fw-bold">URL de Imagen</label>
                                    <input type="url" class="form-control" id="imagen-edit" 
                                           @bind="empresaSeleccionada.imagen">
                                </div>
                            </div>
                        </form>
                    }
                }
            </div>
            <div class="modal-footer">
                @if (!modoEdicion)
                {
                    <button type="button" class="btn btn-warning" @onclick="ActivarModoEdicion">
                        <i class="bi bi-pencil"></i> Editar
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEdicion">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="GuardarEdicion">
                        <i class="bi bi-check-circle"></i> Guardar Cambios
                    </button>
                }
                <button type="button" class="btn btn-outline-danger" @onclick="EliminarEmpresa">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CerrarModalDetalles">
                    <i class="bi bi-x-circle"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Backdrop Modal Detalles -->
@if (mostrarModalDetalles)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<EmpresaDto> empresas = new(); // Lista para almacenar los DTOs
    private bool loading = true;
    private int? userId; // ID del usuario obtenido del AuthService
    private bool mostrarModalEmpresa = false;
    private bool mostrarModalDetalles = false;
    private bool modoEdicion = false;
    private EmpresaDto? empresaSeleccionada = null;
    private EmpresaDto? empresaSeleccionadaBackup = null;
    private EmpresaDto formEmpresa = new();

    protected override async Task OnInitializedAsync()
    {
        // **PASO CLAVE:** Forzar la carga de datos de LocalStorage/Sesi贸n solo cuando el circuito es interactivo.
        // Esto resuelve el error de JavaScript Interop.
        await AuthService.EnsureAuthDataLoadedAsync();

        // 1. Obtener el ID del Usuario Autenticado (Ahora deber铆a estar disponible)
        userId = await AuthService.GetUserIdAsync(); 

        if (userId.HasValue && userId.Value > 0)
        {
            try
            {
                // 2. Llamar al servicio para obtener las empresas. 
                // El servicio maneja la llamada a la API y la deserializaci贸n flexible.
                empresas = await EmpresaService.GetEmpresasDelUsuarioAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error en la vista al cargar empresas: {ex.Message}");
                // En un entorno real, aqu铆 podr铆as mostrar un Toast/Notificaci贸n de error.
                empresas = new List<EmpresaDto>(); 
            }
        }
        else
        {
            // Mensaje de acceso denegado mostrado por la parte HTML del componente.
        }
        
        loading = false;
    }

    private void AbrirModalCrearEmpresa()
    {
        formEmpresa = new EmpresaDto { usuario_id = userId ?? 0 };
        mostrarModalEmpresa = true;
    }

    private void CerrarModalEmpresa()
    {
        mostrarModalEmpresa = false;
        formEmpresa = new();
    }

    private async Task GuardarEmpresa()
    {
        if (string.IsNullOrWhiteSpace(formEmpresa.Nombre) || string.IsNullOrWhiteSpace(formEmpresa.Tipo))
        {
            // Mostrar error
            return;
        }

        try
        {
            formEmpresa.usuario_id = userId ?? 0;
            var resultado = await EmpresaService.CreateEmpresaAsync(formEmpresa);
            
            if (resultado)
            {
                // Recargar empresas
                empresas = await EmpresaService.GetEmpresasDelUsuarioAsync();
                CerrarModalEmpresa();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al crear empresa: {ex.Message}");
        }
    }

    private void AbrirModalDetalles(EmpresaDto empresa)
    {
        empresaSeleccionada = empresa;
        modoEdicion = false;
        mostrarModalDetalles = true;
    }

    private void CerrarModalDetalles()
    {
        mostrarModalDetalles = false;
        modoEdicion = false;
        empresaSeleccionada = null;
        empresaSeleccionadaBackup = null;
    }

    private void ActivarModoEdicion()
    {
        // Hacer una copia de la empresa para poder cancelar cambios
        if (empresaSeleccionada != null)
        {
            empresaSeleccionadaBackup = new EmpresaDto
            {
                ID = empresaSeleccionada.ID,
                usuario_id = empresaSeleccionada.usuario_id,
                Nombre = empresaSeleccionada.Nombre,
                Tipo = empresaSeleccionada.Tipo,
                Descripcion = empresaSeleccionada.Descripcion,
                Ubicacion = empresaSeleccionada.Ubicacion,
                contactos = empresaSeleccionada.contactos,
                Correo = empresaSeleccionada.Correo,
                imagen = empresaSeleccionada.imagen
            };
            modoEdicion = true;
            StateHasChanged();
        }
    }

    private void CancelarEdicion()
    {
        // Restaurar los valores originales
        if (empresaSeleccionadaBackup != null && empresaSeleccionada != null)
        {
            empresaSeleccionada.Nombre = empresaSeleccionadaBackup.Nombre;
            empresaSeleccionada.Tipo = empresaSeleccionadaBackup.Tipo;
            empresaSeleccionada.Descripcion = empresaSeleccionadaBackup.Descripcion;
            empresaSeleccionada.Ubicacion = empresaSeleccionadaBackup.Ubicacion;
            empresaSeleccionada.contactos = empresaSeleccionadaBackup.contactos;
            empresaSeleccionada.Correo = empresaSeleccionadaBackup.Correo;
            empresaSeleccionada.imagen = empresaSeleccionadaBackup.imagen;
        }
        modoEdicion = false;
    }

    private async Task GuardarEdicion()
    {
        if (empresaSeleccionada == null)
        {
            Console.WriteLine("[Organizaciones] Error: empresaSeleccionada es null");
            return;
        }

        try
        {
            Console.WriteLine($"[Organizaciones] Guardando cambios para empresa {empresaSeleccionada.ID}...");
            Console.WriteLine($"[Organizaciones] Nombre: {empresaSeleccionada.Nombre}");
            
            var resultado = await EmpresaService.UpdateEmpresaAsync(empresaSeleccionada.ID, empresaSeleccionada);
            
            Console.WriteLine($"[Organizaciones] Resultado de actualizaci贸n: {resultado}");
            
            if (resultado)
            {
                Console.WriteLine("[Organizaciones] Recargar empresas...");
                // Recargar empresas para reflejar cambios
                empresas = await EmpresaService.GetEmpresasDelUsuarioAsync();
                Console.WriteLine($"[Organizaciones] Empresas recargar: {empresas.Count}");
                modoEdicion = false;
                mostrarModalDetalles = false;
                empresaSeleccionada = null;
                empresaSeleccionadaBackup = null;
                StateHasChanged();
            }
            else
            {
                Console.WriteLine("[Organizaciones] Error al actualizar empresa - resultado false");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Organizaciones] Error al guardar cambios: {ex.Message}");
            Console.WriteLine($"[Organizaciones] Stack trace: {ex.StackTrace}");
        }
    }

    private async Task EliminarEmpresa()
    {
        if (empresaSeleccionada == null)
            return;

        if (!await JS.InvokeAsync<bool>("confirm", $"驴Est谩s seguro de que deseas eliminar '{empresaSeleccionada.Nombre}'? Esta acci贸n no se puede deshacer."))
            return;

        try
        {
            Console.WriteLine($"[Organizaciones] Eliminando empresa {empresaSeleccionada.ID}...");
            var resultado = await EmpresaService.DeleteEmpresaAsync(empresaSeleccionada.ID);
            
            if (resultado)
            {
                Console.WriteLine("[Organizaciones] Empresa eliminada correctamente");
                // Recargar empresas
                empresas = await EmpresaService.GetEmpresasDelUsuarioAsync();
                CerrarModalDetalles();
            }
            else
            {
                Console.WriteLine("[Organizaciones] Error al eliminar empresa");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Organizaciones] Error al eliminar empresa: {ex.Message}");
        }
    }
}