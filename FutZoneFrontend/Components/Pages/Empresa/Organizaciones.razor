@page "/organizaciones"
@using FutZoneFrontend.DTOs
@using FutZoneFrontend.Services
@inject IEmpresaService EmpresaService // El servicio que creamos
@inject IAuthService AuthService // Para obtener el ID del usuario
@inject NavigationManager NavigationManager // Para posible redirecci贸n si no hay ID
@inject IJSRuntime JS // Para confirmaci贸n de eliminaci贸n

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Organizaciones Registradas</h3>
    <button class="btn btn-primary" @onclick="AbrirModalCrearEmpresa" disabled="@loading">
        <i class="bi bi-plus-circle"></i> Crear Nueva Empresa
    </button>
</div>

@if (loading)
{
    <div class="alert alert-info">
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        Cargando organizaciones del usuario...
    </div>
}
else if (!userId.HasValue || userId.Value <= 0)
{
    <div class="alert alert-warning" role="alert">
        锔 **Acceso Denegado:** No se pudo obtener el ID del usuario. Por favor, <a href="/login">inicia sesi贸n</a>.
    </div>
}
else if (empresas == null || !empresas.Any())
{
    <div class="alert alert-secondary" role="alert">
        癸 No se encontraron organizaciones registradas para ti (ID de Usuario: @userId). Crea una nueva empresa para comenzar.
    </div>
}
else
{
    <div class="row">
        @foreach (var empresa in empresas)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@empresa.imagen" class="card-img-top" alt="Logo de @empresa.Nombre" style="height: 180px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@empresa.Nombre</h5>
                        <p class="card-text mb-1">
                            <strong>Tipo:</strong> @empresa.Tipo
                        </p>
                        <p class="card-text mb-2 text-muted small truncate-lines-2">
                            @empresa.Descripcion
                        </p>
                        <ul class="list-unstyled small mt-auto">
                            <li> <strong>Ubicaci贸n:</strong> @empresa.Ubicacion</li>
                            <li> <strong>Contacto:</strong> @empresa.Correo</li>
                        </ul>
                        <div class="mt-2">
                            <button class="btn btn-outline-info btn-sm" @onclick="() => AbrirModalDetalles(empresa)">Ver Detalles</button>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <small class="text-muted">ID Empresa: @empresa.ID</small>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Modal Crear Empresa -->
<div class="modal @(mostrarModalEmpresa ? "show d-block" : "")" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-building"></i> Crear Nueva Empresa
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalEmpresa"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Nombre -->
                    <div class="mb-3">
                        <label for="nombre" class="form-label fw-bold">Nombre de la Empresa</label>
                        <input type="text" class="form-control" id="nombre" 
                               placeholder="Ej. Cancha Central" 
                               @bind="formEmpresa.Nombre">
                    </div>

                    <!-- Tipo -->
                    <div class="mb-3">
                        <label for="tipo" class="form-label fw-bold">Tipo</label>
                        <input type="text" class="form-control" id="tipo" 
                               placeholder="Ej. Deportiva, Recreativa" 
                               @bind="formEmpresa.Tipo">
                    </div>

                    <!-- Descripci贸n -->
                    <div class="mb-3">
                        <label for="descripcion" class="form-label fw-bold">Descripci贸n</label>
                        <textarea class="form-control" id="descripcion" rows="3"
                                  placeholder="Describe los servicios de la empresa..."
                                  @bind="formEmpresa.Descripcion"></textarea>
                    </div>

                    <div class="row">
                        <!-- Ubicaci贸n -->
                        <div class="col-md-6 mb-3">
                            <label for="ubicacion" class="form-label fw-bold">Ubicaci贸n</label>
                            <input type="text" class="form-control" id="ubicacion" 
                                   placeholder="Ej. Calle Principal 123" 
                                   @bind="formEmpresa.Ubicacion">
                        </div>

                        <!-- Contactos -->
                        <div class="col-md-6 mb-3">
                            <label for="contactos" class="form-label fw-bold">Contactos</label>
                            <input type="tel" class="form-control" id="contactos" 
                                   placeholder="Ej. +503 7777-7777" 
                                   @bind="formEmpresa.contactos">
                        </div>
                    </div>

                    <div class="row">
                        <!-- Correo -->
                        <div class="col-md-6 mb-3">
                            <label for="correo" class="form-label fw-bold">Correo</label>
                            <input type="email" class="form-control" id="correo" 
                                   placeholder="Ej. contacto@empresa.com" 
                                   @bind="formEmpresa.Correo">
                        </div>

                        <!-- Imagen URL -->
                        <div class="col-md-6 mb-3">
                            <label for="imagen" class="form-label fw-bold">URL de Imagen</label>
                            <input type="url" class="form-control" id="imagen" 
                                   placeholder="Ej. https://ejemplo.com/logo.png" 
                                   @bind="formEmpresa.imagen">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CerrarModalEmpresa">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" @onclick="GuardarEmpresa">
                    <i class="bi bi-check-circle"></i> Crear Empresa
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Backdrop Modal -->
@if (mostrarModalEmpresa)
{
    <div class="modal-backdrop fade show"></div>
}

<!-- Modal Ver Detalles -->
