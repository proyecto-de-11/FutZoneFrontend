@page "/tournament-details"

<style>
    body { background: #ecf2fc; }
    .torneo-container { max-width: 720px; margin: 48px auto; }
    .torneo-card {
        border-radius: 20px;
        box-shadow: 0 4px 32px rgba(67, 206, 162, 0.07);
        background: white;
        overflow: hidden;
    }
    .torneo-header {
        background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%);
        color: white;
        padding: 34px 38px 24px 38px;
    }
    .titulo-torneo { font-size: 2.1rem; font-weight: 800; letter-spacing: 1px; }
    .detalle-meta { font-size: 1.2rem; margin-top: 6px; opacity:0.98 }
    .torneo-body { padding: 28px 38px; }
    .meta-label { font-weight: bold; }
    .equipos-lista { list-style: none; padding-left: 0; margin-bottom: 10px; }
    .equipos-lista li { margin-bottom: 7px; font-size: 1rem; color:#4285f4; }
    .next-match {
        background: #f8fff5;
        border-left: 8px solid #43cea2;
        padding: 12px 22px;
        margin-top: 28px;
        border-radius: 11px;
        font-size: 1.13rem;
    }
    .info-block {
        background: #f3f8fc;
        border-radius: 8px;
        padding: 18px;
        margin-top: 16px;
    }
    .badge-torneo {
        background: #e1f6ea;
        color: #43cea2;
        font-weight: bold;
        padding: 7px 14px;
        border-radius: 13px;
        margin-right: 8px;
    }
</style>

<div class="torneo-container">
    <div class="torneo-card">
        <div class="torneo-header">
            <span class="badge-torneo"><i class="bi bi-calendar-event"></i> Torneo Activo</span>
            <div class="titulo-torneo"><i class="bi bi-badge-sd"></i> Copa Liga Premier 2025</div>
            <div class="detalle-meta">
                <span class="meta-label">Fecha inicio:</span> 12 Nov 2025 &nbsp; | &nbsp; 
                <span class="meta-label">Ubicación:</span> Estadio Metropolitano
            </div>
        </div>
        <div class="torneo-body">
            <div class="info-block">
                <span class="meta-label">Descripción: </span>
                Torneo regional anual para equipos de fútbol categoría profesional, estilo bracket y eliminación directa.
            </div>
            <hr>
            <span class="meta-label">Equipos Participantes:</span>
            <ul class="equipos-lista">
                <li>Los Tigres FC</li>
                <li>Águilas Elite</li>
                <li>Dragones Metropolitanos</li>
                <li>Leones de la Sierra</li>
                <!-- Más equipos aquí -->
            </ul>
            <div class="next-match">
                <span class="meta-label">Próximo partido:</span><br>
                Los Tigres FC <b>vs</b> Águilas Elite<br>
                <strong>Fecha:</strong> 14 Nov 2025 <strong>• Hora:</strong> 18:00 hrs
            </div>
        </div>
    </div>
</div>

