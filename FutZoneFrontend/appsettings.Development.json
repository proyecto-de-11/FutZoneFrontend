{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiBaseUrl": "https://apiautentificacion.onrender.com/",
  "ApiEndpoints": {
    "Autentificacion": {
      "BaseUrl": "https://apiautentificacion.onrender.com",
      "Endpoints": {
        "Login": "/api/auth/login",
        "Register": "/api/auth/register",
        "VerifyToken": "/api/auth/verify"
      }
    },
    "CanchasYReservas": {
      "BaseUrl": "https://apicanchasyreservas.onrender.com",
      "Endpoints": {
        "Canchas": {
          "GetAll": "/api/canchas",
          "Create": "/api/canchas",
          "GetById": "/api/canchas/:canchaId",
          "Update": "/api/canchas/:canchaId",
          "Disable": "/api/canchas/:canchaId/deshabilitar",
          "Enable": "/api/canchas/:canchaId/habilitar",
          "GetOwner": "/api/empresa/:canchaId"
        },
        "Horarios": {
          "GetByCanchaId": "/api/canchas/horarios/:canchaId",
          "Create": "/api/canchas/horarios",
          "Update": "/api/canchas/horarios/:horarioId",
          "Delete": "/api/canchas/horarios/:horarioId"
        },
        "Reservas": {
          "GetAll": "/api/reservas",
          "Create": "/api/reservas",
          "GetById": "/api/reservas/:reservaId",
          "Process": "/api/solicitudes/:solicitudId/process",
          "DeleteSolicitud": "/api/solicitudes/:solicitudId",
          "DeleteReserva": "/api/reservas/:reservaId"
        }
      }
    }
  }
}
